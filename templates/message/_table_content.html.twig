{% if messages is empty %}
    <p>{{ 'message.list.no_messages'|trans }}</p>
{% else %}
    <div class="table-responsive">
        <table class="table table-hover" id="message-table">
            <thead>
                <tr>
                    <th>{{ 'message.list.table.subject'|trans }}</th>
                    <th>{{ 'message.list.table.sender'|trans }}</th>
                    <th>{{ 'message.list.table.date'|trans }}</th>
                    <th>{{ 'message.list.table.status'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for message in messages %}
                    <tr class="message-row {{ message.state.value == 'unread' ? 'fw-bold' : '' }}"
                        data-message-uuid="{{ message.uuid }}"
                        data-message-state="{{ message.state.value }}"
                        style="cursor: pointer;">
                        <td>{{ message.subject|trans|default('message.list.table.no_subject'|trans) }}</td>
                        <td>{{ message.sender.name|default('message.list.table.sender_name.default'|trans) }}</td>
                        <td>{{ message.createdAt|date('Y-m-d H:i') }}</td>
                        <td>
                            <span class="badge message-state-badge {{ message.state.value == 'read' ? 'bg-success' : 'bg-info' }}">
                                {{ ('message.state.' ~ message.state.value)|trans }}
                            </span>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <nav aria-label="Message pagination">
            <ul class="pagination">
                <li class="page-item {{ offset == 0 ? 'disabled' : '' }}">
                    <a class="page-link ajax-link" href="{{ path('app_message_list', {offset: max(0, offset - limit), limit: limit, state: current_state}) }}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                {% for i in 1..pages %}
                    <li class="page-item {{ i == current_page ? 'active' : '' }}">
                        <a class="page-link ajax-link" href="{{ path('app_message_list', {offset: (i - 1) * limit, limit: limit, state: current_state}) }}">{{ i }}</a>
                    </li>
                {% endfor %}

                <li class="page-item {{ (offset + limit) >= total ? 'disabled' : '' }}">
                    <a class="page-link ajax-link" href="{{ path('app_message_list', {offset: offset + limit, limit: limit, state: current_state}) }}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
{% endif %}
