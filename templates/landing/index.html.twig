{% extends 'base.html.twig' %}

{% block title %}Football Manager – Landing{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="auth-main">
    <div class="auth-wrapper v3">
        <div class="auth-form">
            <div class="auth-header">
                <a href="#"><img src="{{ asset('assets/images/logo-dark.svg') }}" alt="img"></a>
            </div>
            <div class="card my-5">
                <div class="card-body">
                    <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link {% if not registrationForm.vars.submitted and not (error|default(null)) %}active{% endif %}" id="user-login-tab" data-bs-toggle="tab" data-bs-target="#user-login-pane" type="button" role="tab" aria-controls="user-login-pane" aria-selected="{{ (registrationForm.vars.submitted or (error|default(null))) ? 'false' : 'true' }}">{{ 'tabs.login'|trans }}</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link {% if registrationForm.vars.submitted %}active{% endif %}" id="user-register-tab" data-bs-toggle="tab" data-bs-target="#user-register-pane" type="button" role="tab" aria-controls="user-register-pane" aria-selected="{{ registrationForm.vars.submitted ? 'true' : 'false' }}">{{ 'tabs.register'|trans }}</button>
                        </li>
                    </ul>

                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade {% if not registrationForm.vars.submitted %}show active{% endif %}" id="user-login-pane" role="tabpanel" aria-labelledby="user-login-tab" tabindex="0">
                            <form method="post" action="{{ path('app_login', {'_locale': app.request.locale}) }}" class="w-100">
                                <div class="d-flex justify-content-between align-items-end mb-4">
                                    <h3 class="mb-0"><b>{{ 'tabs.login'|trans }}</b></h3>
                                </div>
                                {% for label, messages in app.flashes %}
                                    {% for message in messages %}
                                        <div class="alert alert-{{ label }}">
                                            {{ message }}
                                        </div>
                                    {% endfor %}
                                {% endfor %}

                                {% if error|default(null) %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}

                                <div class="form-group mb-3">
                                    <label for="inputEmail" class="form-label">{{ 'registration.email.label'|trans }}</label>
                                    <input type="email" value="{{ last_username|default('') }}" name="_username" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="Email Address">
                                </div>
                                <div class="form-group mb-3">
                                    <label for="inputPassword" class="form-label">{{ 'registration.password.label'|trans }}</label>
                                    <input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Password">
                                </div>

                                <div class="d-flex mt-1 justify-content-between">
                                    <div class="form-check">
                                        <input class="form-check-input input-primary" type="checkbox" id="customCheckc1" checked="" name="_remember_me">
                                        <label class="form-check-label text-muted" for="customCheckc1">Keep me sign in</label>
                                    </div>
                                    <a href="{{ path('app_forgot_password_request', {'_locale': app.request.locale}) }}"><h5 class="text-secondary f-w-400">{{ 'login.forgot_password'|trans }}</h5></a>
                                </div>

                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                <div class="d-grid mt-4">
                                    <button class="btn btn-primary" type="submit">
                                        {{ 'tabs.login'|trans }}
                                    </button>
                                </div>
                            </form>
                        </div>

                        <div class="tab-pane fade {% if registrationForm.vars.submitted %}show active{% endif %}" id="user-register-pane" role="tabpanel" aria-labelledby="user-register-tab" tabindex="0">
                            <div class="mt-3">
                                <div class="d-flex justify-content-between align-items-end mb-4">
                                    <h3 class="mb-0"><b>{{ 'tabs.register'|trans }}</b></h3>
                                </div>
                                {{ form_start(registrationForm, {'action': path('user_register', {'_locale': app.request.locale})}) }}
                                    <div class="form-group mb-3">
                                        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email Address'}}) }}
                                    </div>
                                    <div class="form-group mb-3">
                                        {{ form_row(registrationForm.managerName, {'attr': {'class': 'form-control', 'placeholder': 'Manager Name'}}) }}
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            {{ form_errors(registrationForm.password) }}
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            {{ form_row(registrationForm.password.first, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            {{ form_row(registrationForm.password.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirm Password'}}) }}
                                        </div>
                                    </div>
                                    <div class="d-grid mt-4">
                                        <button class="btn btn-primary">{{ 'registration.submit'|trans }}</button>
                                    </div>
                                {{ form_end(registrationForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="auth-footer row">
                <div class="col my-1">
                    <p class="m-0">Fußball Manager &copy; {{ "now"|date("Y") }}</p>
                </div>
                <div class="col-auto my-1">
                    <ul class="list-inline footer-link mb-0">
                        <li class="list-inline-item"><a href="#">Home</a></li>
                        <li class="list-inline-item"><a href="#">Privacy Policy</a></li>
                        <li class="list-inline-item"><a href="#">Contact us</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
