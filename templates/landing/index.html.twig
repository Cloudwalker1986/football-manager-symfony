{% extends 'base.html.twig' %}

{% block title %}Football Manager â€“ Landing{% endblock %}

{% block body %}

<div class="row" >
    <div class="col" style="
        background-image: url({{ asset('images/stadium.png') }});
        min-height: 600px;
        background-color: rgba(99,160,239,0.9);
        background-size: cover;
        background-position: center center;
        background-repeat: no-repeat;
        ">
        <div>
            <div class="col col-md-6 offset-md-3 mt-5">
                <div class="card">
                    <div class="card-body">
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link {% if not registrationForm.vars.submitted and not error %}active{% endif %}" id="user-login-tab" data-bs-toggle="tab" data-bs-target="#user-login-pane" type="button" role="tab" aria-controls="user-login-pane" aria-selected="{{ (registrationForm.vars.submitted or error) ? 'false' : 'true' }}">{{ 'tabs.login'|trans }}</button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link {% if registrationForm.vars.submitted %}active{% endif %}" id="user-register-tab" data-bs-toggle="tab" data-bs-target="#user-register-pane" type="button" role="tab" aria-controls="user-register-pane" aria-selected="{{ registrationForm.vars.submitted ? 'true' : 'false' }}">{{ 'tabs.register'|trans }}</button>
                            </li>
                        </ul>
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade {% if not registrationForm.vars.submitted %}show active{% endif %}" id="user-login-pane" role="tabpanel" aria-labelledby="user-login-tab" tabindex="0">
                                <form method="post" action="{{ path('app_login') }}" class="mt-3">
                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}

                                    <div class="mb-3">
                                        <label for="inputEmail" class="form-label">{{ 'registration.email.label'|trans }}</label>
                                        <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                                    </div>
                                    <div class="mb-3">
                                        <label for="inputPassword" class="form-label">{{ 'registration.password.label'|trans }}</label>
                                        <input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                                    </div>

                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                    <button class="btn btn-primary w-100" type="submit">
                                        {{ 'tabs.login'|trans }}
                                    </button>
                                </form>
                            </div>
                            <div class="tab-pane fade {% if registrationForm.vars.submitted %}show active{% endif %}" id="user-register-pane" role="tabpanel" aria-labelledby="user-register-tab" tabindex="0">
                                <div class="mt-3">
                                    {{ form_start(registrationForm, {'action': path('user_register')}) }}
                                        <div class="row">
                                            <div class="col-md-6">
                                                {{ form_row(registrationForm.email) }}
                                            </div>
                                            <div class="col-md-6">
                                                {{ form_row(registrationForm.managerName) }}
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-12">
                                                {{ form_errors(registrationForm.password) }}
                                            </div>
                                            <div class="col-md-6">
                                                {{ form_row(registrationForm.password.first) }}
                                            </div>
                                            <div class="col-md-6">
                                                {{ form_row(registrationForm.password.second) }}
                                            </div>
                                        </div>
                                        <button class="btn btn-primary w-100 mt-3">{{ 'registration.submit'|trans }}</button>
                                    {{ form_end(registrationForm) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <div>Features description</div>
    </div>
</div>

{% endblock %}
