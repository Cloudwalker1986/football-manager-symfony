{% extends 'base.html.twig' %}

{% block title %}{{ 'login.reset_password.title'|trans }}{% endblock %}

{% block body %}
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">{{ message }}</div>
                    {% endfor %}
                    <h1 class="h3 mb-3 font-weight-normal">{{ 'login.reset_password.title'|trans }}</h1>

                    {{ form_start(requestForm) }}
                        {{ form_row(requestForm.email) }}
                        <div>
                            <small>
                                {{ 'login.reset_password.help_text'|trans }}
                            </small>
                        </div>

                        <button class="btn btn-primary w-100 mt-3">{{ 'login.reset_password.submit'|trans }}</button>
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
