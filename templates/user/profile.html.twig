{% extends 'game_layout.html.twig' %}

{% block title %}{{ 'profile.title'|trans }}{% endblock %}

{% block content_title %}{{ 'profile.title'|trans }}{% endblock %}

{% block breadcrumb %}{{ 'profile.title'|trans }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-12">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message|trans }}
                </div>
            {% endfor %}

            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6 mb-3">
                    <!-- User Related Section -->
                    <div class="card h-100">
                        <div class="card-header">
                            <h5>{{ 'profile.sections.user_details'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-group mb-3">
                                {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.email) }}
                            </div>
                            <div class="form-group mb-3">
                                {{ form_label(form.locale, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.locale, {'attr': {'class': 'form-select'}}) }}
                                {{ form_errors(form.locale) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <!-- Manager Related Section -->
                    <div class="card h-100">
                        <div class="card-header">
                            <h5>{{ 'profile.sections.manager_details'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-group mb-3">
                                {{ form_label(form.managerName, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.managerName, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.managerName) }}
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12 text-end">
                            <button type="submit" class="btn btn-primary">{{ 'profile.submit'|trans }}</button>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <!-- Password Change Section -->
                    <div class="card h-100">
                        <div class="card-header">
                            <h5>{{ 'profile.sections.change_password'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-group mb-3">
                                {{ form_label(form.currentPassword, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.currentPassword, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.currentPassword) }}
                            </div>
                            <div class="form-group mb-3">
                                {{ form_label(form.newPassword.first, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.newPassword.first, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.newPassword.first) }}
                            </div>
                            <div class="form-group mb-3">
                                {{ form_label(form.newPassword.second, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.newPassword.second, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.newPassword.second) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <!-- Delete Account Section -->
                    <div class="card h-100">
                        <div class="card-header">
                            <h5>{{ 'profile.sections.delete_account'|trans }}</h5>
                        </div>
                        <div class="card-body">
                            <p>{{ 'profile.delete_account_warning'|trans }}</p>
                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">
                                <i class="ti ti-trash"></i> {{ 'profile.delete_account'|trans }}
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <!-- Delete Account Confirmation Modal -->
    <div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-labelledby="deleteAccountModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteAccountModalLabel">{{ 'profile.sections.danger_zone'|trans }}</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>{{ 'profile.delete_account_confirm'|trans }}</p>
                    <p class="text-danger small">{{ 'profile.delete_account_warning'|trans }}</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'cancel'|trans|default('Cancel') }}</button>
                    <form action="{{ path('app_profile_delete') }}" method="post">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete-account') }}">
                        <button type="submit" class="btn btn-danger">{{ 'profile.delete_account'|trans }}</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
